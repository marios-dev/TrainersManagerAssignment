@model IEnumerable<TrainersManagerAssignment.Models.Trainer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index","Trainers",FormMethod.Get))
{
    <p>
        Title: @Html.TextBox("searchString")
        <input type="submit"value="Filter" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("First Name","Index",new { sortOrder=ViewBag.FNameSortParm })
        </th>
        <th>
            @Html.ActionLink("Last Name","Index",new { sortOrder=ViewBag.LNameSortParm })
        </th>
        <th>
            @Html.ActionLink("Subject","Index",new { sortOrder=ViewBag.SubjectSortParm })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subject)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
